<header class="header-wrapper">
    <div class="header-top d-none d-md-block">
        <div class="container">
            <div class="header-top-area">
                <div class="header-top-info">
                    <a>Hoàn toàn miễn phí trả lại và miễn phí vận chuyển trên toàn thế giới</a>
                </div>
                <div class="header-top-action-area">
                    <div class="header-info-dropdown">
                        <button type="button" class="btn-info dropdown-toggle" id="dropdownLang"
                            data-bs-toggle="dropdown" aria-expanded="false">VIE</button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownLang">
                            <li class="dropdown-item active">VIE</li>
                            <li class="dropdown-item">ENG</li>
                        </ul>
                    </div>
                    <div class="header-info-dropdown">
                        <button type="button" class="btn-info dropdown-toggle" id="dropdownCurrency"
                            data-bs-toggle="dropdown" aria-expanded="false">VND</button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownCurrency">
                            <li class="dropdown-item active">VND</li>
                            <li class="dropdown-item">USD</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-middle">
        <div class="container">
            <div class="row align-items-center justify-content-between align-items-center">
                <div class="col-auto">
                    <div class="header-logo-area">
                        <a href="index.html">
                            <img class="logo-main" src="/static/images/logo.png" width="182" height="31" alt="Logo">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-area d-none d-lg-block">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto d-none d-lg-block ms-auto me-n3 pe-0">
                    <div class="header-navigation ps-6">
                        <%- include('../partical/menu') %>
                    </div>
                </div>
                <div class="col-auto">
                    <% if (user) { %>
                        <div class="header-action-user d-flex align-items-center gap-2">
                            <a href="/account" class="d-flex align-items-center">
                                <i class="icon icon-user me-1"></i>
                                <span style="color: rgb(92, 5, 241);">
                                    <%= user.name || "Người dùng" %>
                                        <!-- Hiển thị tên hoặc "Người dùng" nếu name không tồn tại -->
                                </span>
                            </a>
                            <a href="/logout" title="Đăng xuất" class="ms-2"
                                style="font-size: 20px; color: rgb(245, 12, 12);">
                                <i class="fa fa-power-off"></i>
                            </a>
                        </div>
                        <% } else { %>
                            <a href="/login" class="header-action-user d-flex align-items-center">
                                <i class="icon icon-user me-1"></i> Đăng nhập
                            </a>
                            <% } %>
                </div>
                <div class="col-auto">
                    <div class="header-action">
                        <button class="btn-search-menu d-md-none" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#AsideOffcanvasSearch" aria-controls="AsideOffcanvasSearch">
                            <span class="search-icon">
                                <svg width="22" height="22" viewBox="0 0 22 22" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M12.5 11H11.71L11.43 10.73C12.41 9.59 13 8.11 13 6.5C13 2.91 10.09 0 6.5 0C2.91 0 0 2.91 0 6.5C0 10.09 2.91 13 6.5 13C8.11 13 9.59 12.41 10.73 11.43L11 11.71V12.5L16 17.49L17.49 16L12.5 11ZM6.5 11C4.01 11 2 8.99 2 6.5C2 4.01 4.01 2 6.5 2C8.99 2 11 4.01 11 6.5C11 8.99 8.99 11 6.5 11Z" />
                                </svg>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>